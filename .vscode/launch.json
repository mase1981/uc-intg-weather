{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Weather Driver",
            "type": "python",
            "request": "launch",
            "module": "uc_intg_weather.driver",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "UC_INTEGRATION_DRIVER_SETTINGS_FILE": "${workspaceFolder}/driver.json",
                "UC_CONFIG_HOME": "${workspaceFolder}/config",
                "UC_INTEGRATION_HTTP_PORT": "9090",
                "UC_INTEGRATION_INTERFACE": "0.0.0.0",
                "UC_DISABLE_MDNS_PUBLISH": "false"
            }
        }
    ]
}