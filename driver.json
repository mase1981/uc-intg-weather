{
  "driver_id": "weather_display",
  "version": "1.0.13",
  "min_core_api": "0.18.0",
  "name": {
    "en": "Weather Display"
  },
  "description": {
    "en": "Display current weather conditions with beautiful icons"
  },
  "developer": {
    "name": "Meir Miyara",
    "email": "meir.miyara@example.com",
    "url": "https://github.com/mase1981"
  },
  "home_page": "https://github.com/mase1981/uc-intg-weather",
  "icon": "uc:weather",
  "setup_data_schema": {
    "title": {
      "en": "Weather Location Setup"
    },
    "settings": [
      {
        "id": "location",
        "label": {
          "en": "Location"
        },
        "field": {
          "text": {
            "placeholder": "e.g., New York, NY or 90210, US or London, UK"
          }
        }
      },
      {
        "id": "temp_unit",
        "label": {
          "en": "Temperature Unit"
        },
        "field": {
          "select": {
            "options": [
              {
                "value": "fahrenheit",
                "label": {
                  "en": "Fahrenheit (°F)"
                }
              },
              {
                "value": "celsius",
                "label": {
                  "en": "Celsius (°C)"
                }
              }
            ],
            "value": "fahrenheit"
          }
        }
      }
    ]
  }
}